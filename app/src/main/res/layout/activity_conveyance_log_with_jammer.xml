<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/back_ground"
        android:orientation="vertical"
        tools:context=".ui.home.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay">

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_7sdp">

            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:text="@string/lable_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

            <com.pratham.dse.widget.CustomNormalEditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/round_rect_grey"
                    android:drawableRight="@drawable/ic_date"
                    android:drawableTint="@color/dark_blue"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:hint="@string/lable_select_date"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="center_vertical"
                    android:text="@string/labele_select_travel_medium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/round_rect_grey"
                    android:gravity="center">

                <Spinner
                        android:id="@+id/travelMediumSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/imavierw3"
                        android:background="@color/transparent" />

                <ImageView
                        android:id="@+id/imavierw3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_3sdp"
                        android:src="@drawable/ic_down_arrow" />
            </RelativeLayout>

            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lable_start_point"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

            <com.pratham.dse.widget.CustomNormalEditText
                    android:id="@+id/etStartPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/round_rect_grey"
                    android:gravity="center_vertical"
                    android:hint="@string/lable_start_point"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lable_start_point_photo"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            <ImageView
                    android:id="@+id/ivStartPoint"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:src="@mipmap/ic_no_image"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_120sdp"/>
            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lable_destination_point"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

            <com.pratham.dse.widget.CustomNormalEditText
                    android:id="@+id/etDestinationPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/round_rect_grey"
                    android:gravity="center_vertical"
                    android:hint="@string/lable_destination_point"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lable_destination_point_photo"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            <ImageView
                    android:id="@+id/ivDestinationPoint"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:src="@mipmap/ic_no_image"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_120sdp"/>
            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lable_amount_paid"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

            <com.pratham.dse.widget.CustomNormalEditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/round_rect_grey"
                    android:gravity="center_vertical"
                    android:hint="@string/lable_amount_paid"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lable_attach_receipt"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            <ImageView
                    android:id="@+id/ivReciept"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:src="@mipmap/ic_no_image"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/_120sdp"/>
            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lable_approximate_km"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

            <com.pratham.dse.widget.CustomNormalEditText
                    android:id="@+id/etKm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/round_rect_grey"
                    android:gravity="center_vertical"
                    android:hint="@string/lable_approximate_km"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lable_vehicle_number"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

            <com.pratham.dse.widget.CustomNormalEditText
                    android:id="@+id/etVehicleNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/round_rect_grey"
                    android:gravity="center_vertical"
                    android:hint="@string/lable_vehicle_number"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lable_driver_contact_no"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />

            <com.pratham.dse.widget.CustomNormalEditText
                    android:id="@+id/etDriverNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/round_rect_grey"
                    android:gravity="center_vertical"
                    android:hint="@string/lable_driver_contact_no"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lable_no_of_jammer"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <com.pratham.dse.widget.CustomNormalTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:text="@string/lable_big"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />

                    <com.pratham.dse.widget.CustomNormalEditText
                            android:id="@+id/etBigJammer"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tv1"
                            android:background="@drawable/round_rect_grey"
                            android:drawableTint="@color/black"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="numberSigned"
                            android:padding="@dimen/_7sdp"
                            android:text="0"
                            android:maxLength="3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <com.pratham.dse.widget.CustomNormalTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:gravity="center_vertical"
                            android:text="@string/lable_small"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />

                    <com.pratham.dse.widget.CustomNormalEditText
                            android:id="@+id/etSmallJammer"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tv1"
                            android:background="@drawable/round_rect_grey"
                            android:drawableTint="@color/black"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="numberSigned"
                            android:padding="@dimen/_7sdp"
                            android:text="0"
                            android:maxLength="3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                    <com.pratham.dse.widget.CustomNormalTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:gravity="center_vertical"
                            android:text="@string/lable_total"
                            android:textColor="@color/black"
                            android:layout_marginEnd="@dimen/_3sdp"
                            android:textSize="@dimen/_13ssp" />

                    <com.pratham.dse.widget.CustomNormalEditText
                            android:id="@+id/etTotalJammer"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tv1"
                            android:background="@drawable/round_rect_grey"
                            android:drawableTint="@color/black"
                            android:gravity="center_vertical"
                            android:imeOptions="actionNext"
                            android:inputType="numberSigned"
                            android:padding="@dimen/_7sdp"
                            android:text="0"
                            android:maxLength="3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13ssp" />

                </LinearLayout>

            </LinearLayout>
            <com.pratham.dse.widget.CustomNormalTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/lable_comments"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            <com.pratham.dse.widget.CustomNormalEditText
                    android:id="@+id/etComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/round_rect_grey"
                    android:gravity="left"
                    android:hint="@string/lable_comments"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp" />
            <com.pratham.dse.widget.CustomBoldTextView
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:alpha="0.90"
                    android:background="@drawable/submit_btn_selector"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/_10sdp"
                    android:text="@string/btn_submit"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>








</LinearLayout>